<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="400" Height="180"
        x:Class="eSearch.Views.TextInputDialog"
        Title="{Binding Title}"
		xmlns:viewmodels="clr-namespace:eSearch.ViewModels;assembly=eSearch"
		ExtendClientAreaToDecorationsHint="True"
		Icon="{Binding ApplicationIcon}"
		WindowStartupLocation="CenterOwner"
		CanResize="False"
		>
	<Window.Styles>
		<Style Selector="Label.Error">
			<Setter Property="Foreground" Value="Red"/>
		</Style>
	</Window.Styles>
	<Design.DataContext>
		<viewmodels:TextInputDialogViewModel/>
	</Design.DataContext>
	<DockPanel x:Name="TitleMenuAndUI" Margin="5">
		<DockPanel DockPanel.Dock="Top" x:Name="TitleOnly" >
			<Label Height="30" Content="{Binding Title}"/>
		</DockPanel>
		<StackPanel DockPanel.Dock="Bottom" Margin="5,5,15,15" Spacing="5" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button x:Name="BtnOK" Width="150" HorizontalContentAlignment="Center" IsEnabled="{Binding TextValid}" Content="{Binding S[OK]}" IsDefault="True"/>
			<Button x:Name="BtnCancel" Width="150" HorizontalContentAlignment="Center" Content="{Binding S[Cancel]}"/>
		</StackPanel>
		<StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
			<TextBlock x:Name="Label" Inlines="{Binding LabelInlines}" Margin="15,0" TextWrapping="Wrap" />
			<TextBox Text="{Binding Text}" x:Name="TextBoxInput" 
					 Margin="15,0,15,5" TextWrapping="NoWrap" 
					 AcceptsReturn="False" Watermark="{Binding Watermark}"
					 MaxLength="{Binding MaxLength}"
					 />
			<Label x:Name="ValidationError" Content="{Binding ValidationError}"  Margin="15,0" Classes="Error"></Label>
		</StackPanel>
	</DockPanel>
</Window>
